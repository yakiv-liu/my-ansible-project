user www-data;
worker_processes {{ max_workers }};
pid /run/nginx.pid;

events {
    worker_connections 768;
}

http {
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    server {
        listen {{ nginx_port }};
        server_name {{ server_name }};
        
        location / {
            root /var/www/html;
            index index.html;
        }
    }
}
